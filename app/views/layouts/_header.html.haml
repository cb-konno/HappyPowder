%header
  %h2
    = page_title

  .nav
    %ul.nav
      %li.nav-item
        = link_to t('title_index', title: User.model_name.human), users_path, class: 'nav-link'
      %li.nav-item
        = link_to t('title_index', title: Task.model_name.human), tasks_path, class: 'nav-link'
      - if current_user
        %li.nav-item
          = link_to 'ログアウト', logout_path, method: :delete, class: 'nav-link'
      - else
        %li.nav-item
          = link_to 'ログイン', login_path, class: 'nav-link'

  - if flash[:success]
    .flash.success-message
      = flash[:success]
